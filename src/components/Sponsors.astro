const { id } = Astro.props;

import ResponsiveImage, {
  getImgSrcs,
  type ResponsiveImageItem,
} from "./ResponsiveImage.astro";

const logoList: Array<{
  image: ResponsiveImageItem;
  divClass: string;
  link?: string;
}> = [
  //TIER 1
  {
    image: {
      src: mes,
      alt: "McMaster Engineering Society",
      srcs: await getImgSrcs(mes, [864, 486]),
    },
    link: "https://www.macengsociety.ca/",
    divClass: "col-span-12 md:col-span-6",
  },
  {
    image: {
      src: mcMaster,
      alt: "McMaster University",
      srcs: await getImgSrcs(mcMaster, [mcMaster.width]),
    },
    link: "https://www.mcmaster.ca/",
    divClass: "col-span-12 md:col-span-6",
  },
  //TIER 2
  {
    image: {
      src: berachain,
      alt: "Berachain",
      srcs: await getImgSrcs(berachain, [500, 500]),
    },
    link: "https://www.berachain.com/",
    divClass: "col-span-6",
  },
  {
    image: {
      src: cse,
      alt: "CSE",
      srcs: await getImgSrcs(cse, [cse.width]),
    },
    link: "https://www.cse-cst.gc.ca/en",
    divClass: "col-span-6",
  },
  {
    image: {
      src: logsnag,
      alt: "Logsnag",
      srcs: await getImgSrcs(logsnag, [logsnag.width]),
    },
    link: "https://www.logsnag.com/",
    divClass: "col-span-6",
  },
  {
    image: {
      src: scotiabank,
      alt: "Scotiabank",
      srcs: await getImgSrcs(scotiabank, [scotiabank.width]),
    },
    link: "https://www.scotiabank.com/ca/en/personal.html",
    divClass: "col-span-6",
  },
  {
    image: {
      src: fdm,
      alt: "FDM",
      srcs: await getImgSrcs(fdm, [626, 467.4]),
    },
    link: "https://www.fdmgroup.com/",
    divClass: "col-span-6",
  },
  {
    image: {
      src: bell,
      alt: "Bell Canada",
      srcs: await getImgSrcs(bell, [bell.width]),
    },
    link: "https://www.bell.ca/",
    divClass: "col-span-6",
  },
  {
    image: {
      src: onezo,
      alt: "Onezo",
      srcs: await getImgSrcs(onezo, [onezo.width]),
    },
    link: "https://www.onezotea.com/en",
    divClass: "col-span-6 sm:col-span-4",
  },
  //TIER 3
  {
    image: {
      src: wolfram,
      alt: "Wolfram",
      srcs: await getImgSrcs(wolfram, [122, 500]),
    },
    link: "https://www.wolfram.com",
    divClass: "col-span-6 sm:col-span-4",
  },

  {
    image: {
      src: verbwireLogo,
      alt: "Verbwire",
      srcs: await getImgSrcs(verbwireLogo, [verbwireLogo.width]),
