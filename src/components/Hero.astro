const { id } = Astro.props;
---

<link rel="preload" as="image" href="/background_simplified.svg" />
<link rel="preload" as="image" href="/background_simplified_mobile.svg" />
<link rel="preload" as="image" href="/hero_logo.svg" />

<div
  id={id}
  class="h-screen bg-[url('/background_simplified_mobile.svg')] bg-cover bg-bottom py-8 sm:justify-normal sm:bg-[url('/background_simplified.svg')] sm:bg-cover"
>
