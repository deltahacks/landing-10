---
import { Image } from "astro:assets";
import chestAsset from "../assets/treasure-chest.svg";
import arrowUpRight from "../assets/arrow-up-right.svg";

const { id } = Astro.props;

// ----- countdown -----
import dayjs from "dayjs";
import { Counter } from "./Counter";
const end = dayjs(new Date("2023-10-20 23:59:59")); // temporary deadline for testing

// ----- links -----
const links: Array<{
  text: string;
  link: string;
}> = [
  {
    text: "Code of Conduct",
    link: "https://static.mlh.io/docs/mlh-code-of-conduct.pdf",
  },
  //   {
  //     text: "Travel Guidelines",
  //     link: "/",
  //   },
  {
    text: "GitHub",
    link: "https://github.com/deltahacks",
  },
  {
    text: "Instagram",
    link: "https://www.instagram.com/deltahacks/",
  },
  {
    text: "LinkedIn",
    link: "https://www.linkedin.com/company/deltahacks/",
  },
];
---

<div
  id={id}
  class="mx-auto flex h-fit min-h-screen max-w-6xl flex-col justify-center p-6 font-display"
>
  <div
    class="grid grid-cols-1 lg:-mb-24 lg:grid-cols-3 lg:grid-rows-2 lg:gap-y-6"
  >
    <!-- <Counter client:only="react" endTime={end.unix()} /> -->

    <div
      class="flex flex-col items-center text-center font-bold md:col-span-2 lg:items-start lg:text-left"
    >
      <h1
        class="text-2xl text-fill-transparent text-stroke-white text-stroke-2 md:whitespace-nowrap md:text-6xl"
      >
        <span> APPLICATIONS</span>
      </h1>
      <p class="flex text-5xl underline md:text-7xl"></p>
       CLOSED!
      <Image
        src={arrowUpRight}
        alt="Link To Apply"
        class="-mt-2 w-16 md:w-24"
      />
    </div>
  </div>

  <div class="mx-auto p-10 md:row-span-2 md:px-5 lg:py-0">
    <Image src={chestAsset} alt="Treasure Chest" class="w-64 lg:w-[360px]" />
  </div>

  <div
    class="grid grid-flow-col grid-rows-2 gap-y-2 md:col-span-2 md:grid-rows-2 md:gap-x-5 md:px-10 lg:px-0 lg:pb-28 lg:pr-14"
  >
    {
      links.map(({ text, link }) => (
        <div class="whitespace-nowrap font-sans text-xl underline underline-offset-4 opacity-75">
          <a href={link}>{text}</a>
        </div>
      ))
    }
  </div>
</div>
