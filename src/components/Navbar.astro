---
import { Image } from "astro:assets";
---

<div
  class="mx-6 flex max-w-6xl items-center justify-between bg-[#19333A] bg-opacity-40 px-6 py-5 backdrop-blur-xl md:px-8 xl:mx-auto"
>
  <a href="#Hero" class="">
    <Image width="24" height="24" class="h-6" src="/nav_logo.svg" alt="logo" />
  </a>
  <div
    class="hidden w-full max-w-lg justify-between px-12 text-xl text-white md:flex md:text-base lg:px-0"
  >
    <a href="#WhoAreWe">About</a>
    <a href="#Community">Statistics</a>
    <a href="#Carousel">Past Events</a>
    <a href="#Sponsers">Sponsors</a>
    <a href="#FAQ">FAQ</a>
    <a href="#CountdownAndLinks">Links</a>
  </div>
  <div class="hidden md:flex md:items-center md:gap-4">
    <a href="https://www.linkedin.com/company/deltahacks/mycompany/"
      ><Image
        class=""
        width="24"
        height="24"
        src="/nav_linkedin.svg"
        alt="logo"
      /></a
    >
    <a href="https://www.instagram.com/deltahacks">
      <Image
        class=""
        width="24"
        height="24"
        src="/nav_insta.svg"
        alt="Instagram"
      /></a
    >
    <a href="https://twitter.com/deltaHacks"
      ><Image
        class=""
        width="24"
        height="24"
        src="/nav_twitter.svg"
        alt="Twitter"
      /></a
    >
  </div>
  <div class="md:hidden">
    <div class="drawer drawer-end">
      <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        {/* Page content here */}
        <label for="my-drawer-4" class="drawer-button"
          ><Image
            width="24"
            height="24"
            src="/nav_sizing.svg"
            alt="NAV"
          /></label
        >
      </div>
      <div class="drawer-side -mx-6 -mt-10 h-screen w-screen">
        <ul
          class="menu text-base-content h-screen min-h-full w-screen gap-4 bg-[#19333A] p-4 px-6 text-xl"
        >
          <label
            for="my-drawer-4"
            aria-label="close sidebar"
            class="drawer-overlay align-center flex w-full justify-end pb-16"
            ><Image
              width="24"
              height="24"
              src="/nav_close.svg"
              alt="NAV"
            /></label
          >
          <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
          {/* Sidebar content here */}
          <li><a href="#WhoAreWe">About</a></li>
          <li><a href="#Community">Statistics</a></li>
          <li><a href="/">Past Events</a></li>
          <li><a href="#Sponsers">Sponsors</a></li>
          <li><a href="#FAQ">FAQ</a></li>
          <li>
            <a href="#CountdownAndLinks">Links</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
