---
import { Image } from "astro:assets";
---

<div
  class="mx-6 flex max-w-6xl items-center justify-between bg-[#19333A] bg-opacity-40 px-6 py-5 backdrop-blur-xl md:px-8 xl:mx-auto"
>
  <div class="">
    <Image width="24" height="24" class="h-6" src="/nav_logo.svg" alt="logo" />
  </div>
  <div
    class="text-xl md:text-base hidden w-full max-w-lg justify-between px-12 text-white md:flex lg:px-0"
  >
    <p>About</p>
    <p>Statistics</p>
    <p>Past Events</p>
    <p>Sponsors</p>
    <p>FAQ</p>
    <p>Links</p>
  </div>
  <div class="hidden md:flex md:items-center md:gap-4">
    <a href="https://www.linkedin.com/company/deltahacks/mycompany/"
      ><Image
        class=""
        width="24"
        height="24"
        src="/nav_linkedin.svg"
        alt="logo"
      /></a
    >
    <a href="https://www.instagram.com/deltahacks">
      <Image
        class=""
        width="24"
        height="24"
        src="/nav_insta.svg"
        alt="Instagram"
      /></a
    >
    <a href="https://twitter.com/deltaHacks"
      ><Image
        class=""
        width="24"
        height="24"
        src="/nav_twitter.svg"
        alt="Twitter"
      /></a
    >
  </div>
  <div class="md:hidden">
    <Image width="24" height="24" src="/nav_sizing.svg" alt="NAV" />
  </div>
</div>
