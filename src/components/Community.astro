---
import { Image } from "astro:assets";
import Coin2_orange_shiny from "../assets/Coin2_orange_shiny.svg";
---

<!-- -->
<div class="mx-auto max-w-xl text-center">
  <div class="-space-y-2">
    <div class="space-y-2">
      <p class="text-2xl font-extrabold text-white">Come to DeltaHacks X to</p>
      <div
        class="font-display text-6xl font-black text-fill-transparent text-stroke-white text-stroke-2"
      >
        JOIN A GROWING
      </div>
    </div>
    <div class="space-y-3">
      <div class="text-7xl font-bold text-yellow-400">COMMUNITY</div>
    </div>
  </div>
</div>

<!-- Coins Grid Below -->

<div
  class="md:px-26 relative mx-auto content-center px-20 md:px-10 xl:px-40 2xl:px-80"
>
  <div class="grid grid-flow-col grid-rows-4 sm:grid-rows-2 lg:grid-rows-1">
    <div
      class="relative w-64 -rotate-12 pb-0 pt-8 sm:pb-0 sm:pt-8 lg:pb-20 lg:pt-8"
    >
      <div
        class="text-white-400 absolute pl-14 pt-20 text-center text-7xl font-bold"
      >
        800
      </div>
      <div
        class="text-white-400 absolute pl-14 pt-36 text-center text-3xl font-bold"
      >
        HACKERS
      </div>
      <Image src={Coin2_orange_shiny} alt="Hackers" />
    </div>
    <div
      class="relative w-64 rotate-12 pb-0 pt-5 sm:pb-8 sm:pt-4 lg:pb-20 lg:pt-28"
    >
      <div
        class="text-white-400 absolute pl-14 pt-20 text-center text-7xl font-bold"
      >
        200
      </div>
      <div
        class="text-white-400 absolute pl-16 pt-36 text-center text-2xl font-bold"
      >
        PROJECTS
      </div>
      <Image src={Coin2_orange_shiny} alt="Projects" />
    </div>
    <div
      class="sm: sm:64 relative w-72 rotate-12 px-5 pb-0 pt-3 sm:pt-10 lg:pb-20 lg:pt-8"
    >
      <div
        class="text-white-400 absolute pl-14 pt-20 text-center text-7xl font-bold sm:pl-14 sm:pt-20"
      >
        390
      </div>
      <div
        class="text-white-400 absolute pl-14 pt-36 text-center text-3xl font-bold sm:pl-14"
      >
        COMMITS
      </div>
      <Image src={Coin2_orange_shiny} alt="Commits" />
    </div>
    <div
      class="lgpt-28 relative w-80 -rotate-12 px-7 pb-4 pt-0 sm:w-72 sm:pb-8 sm:pt-4 lg:pb-20 lg:pt-28"
    >
      <div
        class="text-white-400 absolute pl-20 pt-20 text-center text-7xl font-bold sm:pl-16"
      >
        55
      </div>
      <div
        class="text-white-400 absolute pb-96 pl-16 pt-36 text-center text-3xl font-bold sm:pl-14"
      >
        Mentors
      </div>
      <Image src={Coin2_orange_shiny} alt="Mentors" />
    </div>
  </div>
</div>
