---
import { Image } from "astro:assets";
import Coin2_orange_shiny from "../assets/Coin2_orange_shiny.svg";
---

<!-- -->
<div class="mx-auto max-w-xl text-center">
  <div class="-space-y-2">
    <div class="space-y-2">
      <p class="text-2xl font-extrabold text-white">Come to DeltaHacks X to</p>
      <div
        class="font-display text-6xl font-black text-fill-transparent text-stroke-white text-stroke-2"
      >
        JOIN A GROWING
      </div>
    </div>
    <div class="space-y-3">
      <div class="text-7xl font-bold text-yellow-400">COMMUNITY</div>
    </div>
  </div>
</div>
<div class="mx-80 content-center">
  <div class="-gap-4 content-nd grid grid-flow-col grid-rows-1 gap-2">
    <div class="relative w-64 -rotate-12 pb-20 pr-1 pt-8">
      <div
        class="text-white-400 absolute pl-14 pt-20 text-center text-7xl font-bold"
      >
        800
      </div>
      <div
        class="text-white-400 absolute pl-14 pt-36 text-center text-3xl font-bold"
      >
        HACKERS
      </div>
      <Image src={Coin2_orange_shiny} alt="Hackers" />
    </div>
    <div class="relative w-64 rotate-12 pb-20 pt-28">
      <div
        class="text-white-400 absolute pl-14 pt-20 text-center text-7xl font-bold"
      >
        200
      </div>
      <div
        class="text-white-400 absolute pl-16 pt-36 text-center text-2xl font-bold"
      >
        PROJECTS
      </div>
      <Image src={Coin2_orange_shiny} alt="Hackers" />
    </div>
    <div class="relative w-64 rotate-12 pb-20 pt-8">
      <div
        class="text-white-400 absolute pl-14 pt-20 text-center text-7xl font-bold"
      >
        390
      </div>
      <div
        class="text-white-400 absolute pl-12 pt-36 text-center text-3xl font-bold"
      >
        COMMITS
      </div>
      <Image src={Coin2_orange_shiny} alt="Hackers" />
    </div>
    <div class="relative w-80 -rotate-12 px-8 pb-20 pt-28">
      <div
        class="text-white-400 absolute pl-20 pt-20 text-center text-7xl font-bold"
      >
        55
      </div>
      <div
        class="text-white-400 absolute pb-96 pl-16 pt-36 text-center text-3xl font-bold"
      >
        Mentors
      </div>
      <Image src={Coin2_orange_shiny} alt="Hackers" />
    </div>
  </div>
</div>
