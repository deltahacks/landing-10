---
import { Image } from "astro:assets";
import Coin2_orange_shiny from "../assets/Coin2_orange_shiny.svg";
---

<!-- -->
<div class="mx-auto max-w-xl text-center">
  <div class="-space-y-2">
    <div class="space-y-2">
      <p class="font-extrabold text-white text-2xl">Come to DeltaHacks X to</p>
      <h1
        class="text-6xl font-black font-display text-fill-transparent text-stroke-white text-stroke-2"
      >
        JOIN A GROWING
      </h1>
    </div>
    <div class="space-y-3">
      <h1 class="text-7xl font-bold text-yellow-400">COMMUNITY</h1>
    </div>
  </div>
</div>
<div class="mx-auto text-center">
  <div class="grid grid-rows-1 grid-flow-col p-8">
    <div class="relative w-80 -rotate-12 translate-x-52 -translate-y-10 p-8">
      <Image src={Coin2_orange_shiny} alt="Hackers" />
      <div
        class="absolute max-w-xl text-center text-7xl font-bold text-white-400 translate-x-14 -translate-y-44"
      >
        800
      </div>
      <div
        class="absolute max-w-xl text-center text-3xl font-bold text-white-400 translate-x-14 -translate-y-28"
      >
        HACKERS
      </div>
    </div>
    <div class="relative w-64 rotate-12 w-80 translate-x-28 translate-y-4 p-8">
      <Image src={Coin2_orange_shiny} alt="Hackers" />
      <div
        class="absolute max-w-xl text-center text-7xl font-bold text-white-400 translate-x-14 -translate-y-44"
      >
        200
      </div>
      <div
        class="absolute max-w-xl text-center text-2xl font-bold text-white-400 translate-x-16 -translate-y-28"
      >
        PROJECTS
      </div>
    </div>
    <div class="relative w-64 rotate-12 w-80 translate-x-2 -translate-y-10 p-8">
      <Image src={Coin2_orange_shiny} alt="Hackers" />
      <div
        class="absolute max-w-xl text-center text-7xl font-bold text-white-400 translate-x-14 -translate-y-44"
      >
        390
      </div>
      <div
        class="absolute max-w-xl text-center text-3xl font-bold text-white-400 translate-x-14 -translate-y-28"
      >
        COMMITS
      </div>
    </div>
    <div class="relative w-64 -rotate-12 w-80 -translate-x-24 translate-y-4 p-8">
      <Image src={Coin2_orange_shiny} alt="Hackers" />
      <div
        class="absolute max-w-xl text-center text-7xl font-bold text-white-400 translate-x-20 -translate-y-44"
      >
        55
      </div>
      <div
        class="absolute max-w-xl text-center text-3xl font-bold text-white-400 translate-x-16 -translate-y-28"
      >
        Mentors
      </div>
    </div>
  </div>
</div>
